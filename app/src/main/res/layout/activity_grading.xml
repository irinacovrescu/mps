<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.example.testproject.Contestant"/>
    </data>

    <ViewFlipper
        android:id="@+id/grading_activity"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/contestants"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/grading_form"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.name}"
                />

            <ListView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/values_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:context="com.example.testproject.GradingActivity">
            </ListView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/submit_button_contestant"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/finished_grading"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/finished_grading_message"
                />

            <Button
                android:id="@+id/returnbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Return" />
        </LinearLayout>
    </ViewFlipper>
</layout>